        xmlns:local="clr-namespace:Reinsurance"
        mc:Ignorable="d"
        ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="CenterScreen"
        MinHeight="600" MinWidth="1100"
        Title="Reinsurance" Height="690" Width="1300">
    
